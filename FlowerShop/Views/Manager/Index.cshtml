@model List<FlowerShop.Models.Flower>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<h2>商品管理</h2>

<p>
    @Html.ActionLink("添加花朵信息", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th >图片</th>
            <th  style="width:10%;">花名</th>
            <th >单价</th>
            <th >介绍</th>
            <th  style="width:20%;">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td style="vertical-align:middle;"><img src="@item.Img" /></td>
                <td style="vertical-align:middle;">@item.ProductName</td>
                <td style="vertical-align:middle;">@item.Price</td>
                <td style="vertical-align:middle;">@item.Intro</td>
                <td style="vertical-align:middle;">
                    @Html.ActionLink("修改", "Edit", new { Id = item.Id })
                    @Html.ActionLink("删除", "Delete", new { Id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>