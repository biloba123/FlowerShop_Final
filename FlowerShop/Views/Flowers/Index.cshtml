@model List<FlowerShop.Models.Flower>
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="title"><span class="title_icon"><img src="~/Content/images/bullet1.gif" alt="" title="" /></span>Featured products</div>

@foreach(FlowerShop.Models.Flower item in Model)
{
    <div class="feat_prod_box">

        <div class="prod_img"><a href="~/Flowers/Details/@item.Id"><img src="@item.Img" alt="" title="" border="0" /></a></div>

        <div class="prod_det_box">
            <div class="box_top"></div>
            <div class="box_center">
                <div class="prod_title">@item.ProductName</div>
                <p class="details">@item.Intro</p>
                <a href="~/Flowers/Details/@item.Id" class="more">- more details -</a>
                <div class="clear"></div>
            </div>
            <div class="box_bottom"></div>
        </div>
        <div class="clear"></div>
    </div>
}




<div class="title"><span class="title_icon"><img src="~/Content/images/bullet2.gif" alt="" title="" /></span>New products</div>

<div class="new_products">

    <div class="new_prod_box">
